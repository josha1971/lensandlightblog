---
interface Props {
	title: string;
	image: string;
	description: string;
}

const { title, image, description } = Astro.props;
---

<div class="photo-card">
	<img src={image} alt={title} />
	<div class="photo-info">
		<h3>{title}</h3>
		<p>{description}</p>
	</div>
</div>

<style>
	.photo-card {
		border-radius: 8px;
		overflow: hidden;
		background: white;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		transition: transform 0.2s;
	}
	.photo-card:hover {
		transform: translateY(-4px);
	}
	.photo-card img {
		width: 100%;
		height: 300px;
		object-fit: cover;
	}
	.photo-info {
		padding: 1rem;
	}
	.photo-info h3 {
		margin: 0 0 0.5rem 0;
	}
	.photo-info p {
		margin: 0;
		color: #666;
		font-size: 0.9rem;
	}
</style>