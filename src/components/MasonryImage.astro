---
interface Props {
	title: string;
	image: string;
	description: string;
}

const { title, image, description } = Astro.props;
---

<div class="masonry-item">
	<img src={image} alt={title} loading="lazy" />
	<div class="overlay">
		<h3>{title}</h3>
		<p>{description}</p>
	</div>
</div>

<style>
	.masonry-item {
		margin-bottom: 1rem;
		position: relative;
		break-inside: avoid;
	}

	.masonry-item img {
		width: 100%;
		height: auto;
		display: block;
		border-radius: 4px;
	}

	.overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
		color: white;
		padding: 1.5rem;
		opacity: 0;
		transition: opacity 0.3s ease;
		border-radius: 0 0 4px 4px;
	}

	.masonry-item:hover .overlay {
		opacity: 1;
	}

	.overlay h3 {
		margin: 0 0 0.5rem 0;
		font-size: 1.25rem;
	}

	.overlay p {
		margin: 0;
		font-size: 0.9rem;
		opacity: 0.9;
	}
</style>