---

<Layout title="Photography Portfolio">
	<section class="hero">
		<h1>Lens & Light</h1>
		<p>Photography Portfolio</p>
	</section>

	<section class="masonry">
		{photos.map(photo => (
			<MasonryImage {...photo} />
		))}
	</section>
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 2rem 0 4rem;
	}

	.hero h1 {
		font-size: 2.5rem;
		margin: 0;
		color: var(--text-color);
	}

	.hero p {
		font-size: 1.25rem;
		color: #666;
		margin: 0.5rem 0 0 0;
	}

	.masonry {
		columns: 3 300px;
		column-gap: 1.5rem;
		padding: 0 1rem;
	}

	@media (max-width: 768px) {
		.masonry {
			columns: 2 200px;
		}
	}

	@media (max-width: 480px) {
		.masonry {
			columns: 1 auto;
		}
	}
</style>