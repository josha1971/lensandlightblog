---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Photography Portfolio and Blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="logo">Lens & Light</a>
				<div class="nav-links">
					<a href="/gallery">Gallery</a>
					<a href="/blog">Blog</a>
					<a href="/about">About</a>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} Lens & Light. All rights reserved.</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--text-color: #2d3436;
		--bg-color: #ffffff;
		--accent-color: #0984e3;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--bg-color);
		color: var(--text-color);
	}
	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
	main {
		flex: 1;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		box-sizing: border-box;
	}
	nav {
		background: var(--bg-color);
		border-bottom: 1px solid #eee;
		padding: 1rem;
	}
	.nav-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.logo {
		font-size: 1.5rem;
		font-weight: bold;
		text-decoration: none;
		color: var(--text-color);
	}
	.nav-links {
		display: flex;
		gap: 2rem;
	}
	.nav-links a {
		text-decoration: none;
		color: var(--text-color);
		font-weight: 500;
	}
	.nav-links a:hover {
		color: var(--accent-color);
	}
	footer {
		text-align: center;
		padding: 2rem;
		border-top: 1px solid #eee;
	}
</style>